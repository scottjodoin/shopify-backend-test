<p id="notice"><%= notice %></p>


<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% if @post.search %><p>This image is a search image</p><% end %>

<% if @post.image.attached? %>

<%= image_tag @post.image.variant(resize_to_limit: [300, 300]) %>

<% else %><p>Image not found!</p><% end %>
<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<% if user_signed_in? and (current_user.admin or current_user==@post.user) %>
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-secondary" %> |
  <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-warning" %> |
<% end %>
<%= link_to 'Back', posts_path, class: "btn btn-outline-secondary" %>
